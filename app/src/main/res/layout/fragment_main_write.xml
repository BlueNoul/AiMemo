<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:background="@drawable/main_background"
    tools:context=".Main_write"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->
<!--    메모 메뉴바(폰트크기 볼드 리스트 사진 저장)  -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"

        android:orientation="horizontal">
<!-- 폰트크기 볼드 리스트 사진-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:orientation="horizontal"


        android:background="@drawable/round_border">

        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"

            android:id="@+id/memo_fontSize"
            android:layout_margin="10dp"
            android:background="@drawable/textsize"
            android:layout_gravity="center"/>
        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:id="@+id/memo_bold"
            android:background="@drawable/bold"
            android:layout_gravity="center"/>
        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:id="@+id/memo_list"
            android:background="@drawable/list"
            android:layout_gravity="center"/>
        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:id="@+id/memo_img"
            android:background="@drawable/gallery"
            android:layout_gravity="center"/>
    </LinearLayout>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/memo_save"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:onClick="onSave"
            android:textSize="16dp"
            android:background="@drawable/round_border_save"
            android:text="Save" />


    </LinearLayout>

    <EditText
        android:id="@+id/memo_text"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:hint="메모쓰는곳"
        android:textColorHint="#CDCDCD"
        android:background="@drawable/round_border"
        android:textColor="@android:color/black"
        android:textSize="20dp"/>

</LinearLayout>